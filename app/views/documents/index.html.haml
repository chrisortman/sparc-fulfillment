.row
  .col-md-12
    .page-header
      %h1
        %i.glyphicon.glyphicon-equalizer
        Reports
.row
  .col-md-12
    .page-header
      %h3
        = t(:reports)[:page_title]
.row.report-buttons
  .col-md-3
    %button.btn-block.new_report.btn.btn-primary{ data: { type: "billing_report" } }
