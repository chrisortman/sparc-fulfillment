  .page_change_arrow.btn.btn-info.glyphicon.glyphicon-arrow-left{title: t(:visit_groups)[:view_page_previous], type: "button", id: "arrow-left-#{arm.id}", :'data-arm_id' => "#{arm.id}", page: page - 1, disabled: page == 1, role: 'button', aria: {label: "View Previous"}, data: {toggle: "tooltip", animation: 'false'}}
