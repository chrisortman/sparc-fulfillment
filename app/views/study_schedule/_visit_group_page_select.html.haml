.col-xs-2
  .page_change_arrow.btn.btn-info.btn.btn-info.glyphicon.glyphicon-arrow-right{title: t(:visit_groups)[:view_page_next], type: "button", id: "arrow-right-#{arm.id}", :'data-arm_id' => "#{arm.id}", page: page + 1, disabled: page * Visit.per_page >= arm.visit_count, role: 'button', aria: {label: "View Previous"}, data: {toggle: "tooltip", animation: 'false'}}
