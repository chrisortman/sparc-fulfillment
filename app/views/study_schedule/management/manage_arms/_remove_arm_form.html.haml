.modal-dialog
  .modal-content
    .modal-header
      %button.close{type: 'button', data: {dismiss: 'modal'}}
        %span{aria: {hidden:'true'}} &times;
        %span.sr-only= t(:actions)[:close]
      %h4#add_arm.modal-title.text-center= t(:arm)[:remove_arm]
    .modal-body
      #modal_errors
      .row
        .col-md-12.form-horizontal
          .form-group
            = label_tag 'remove_arm_label', t(:arm)[:object], class: "col-sm-4 control-label"
            .col-sm-7= select_tag "remove_arm_select", options_from_collection_for_select(protocol_arms, 'id', 'name', arm.id), class: "selectpicker form-control"
    .modal-footer
      .center-block
        %button.btn.btn-default{type: 'button', data: {dismiss: 'modal'}}= t(:actions)[:close]
        %input.btn.btn-primary#remove_arm_form_button{type: 'submit', value: t(:actions)[:remove]}
